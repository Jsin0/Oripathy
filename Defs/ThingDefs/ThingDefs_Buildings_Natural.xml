<?xml version="1.0" encoding="utf-8" ?>
<Defs>	
	<ThingDef ParentName="RockBase">
		<defName>MineableOriginium</defName>
		<label>originium ore</label>
		<description>A deposit of dormant originium.</description>
		<graphicData>
		  <texPath>Things/Building/Linked/RockFlecked_Atlas</texPath>
		  <graphicClass>Graphic_Single</graphicClass>
		  <shaderType>CutoutComplex</shaderType>
		  <color>(97,97,97)</color>
		  <colorTwo>(26,26,26)</colorTwo>
		</graphicData>
		<statBases>
		  <MaxHitPoints>1500</MaxHitPoints>
		</statBases>
		<building>
		  <isResourceRock>true</isResourceRock>
		  <mineableThing>RM_OriginiumOre</mineableThing>
		  <mineableYield>4</mineableYield>
		  <mineableScatterCommonality>1.00</mineableScatterCommonality>
		  <mineableScatterLumpSizeRange>3~6</mineableScatterLumpSizeRange>
		  <veinMineable>true</veinMineable>
		</building>
	</ThingDef>
	
	<ThingDef ParentName="BuildingBase">
    <defName>RM_OriginiumCluster</defName>
    <label>originium cluster</label>
    <description>A large crystal cluster of active originium. Getting a scratch from this has a near certain chance of contracting oripathy.</description>
    <thingClass>Originium.Building_OriginiumTrapDamager</thingClass>
    <graphicData>
      <texPath>Things/Building/Natural/OriginiumSpikes</texPath>
      <graphicClass>Graphic_Random</graphicClass>
      <damageData>
        <rect>(0,0,1,0.15)</rect>
      </damageData>
    </graphicData>
    <altitudeLayer>Building</altitudeLayer>
    <pathCost>40</pathCost>
    <pathCostIgnoreRepeat>true</pathCostIgnoreRepeat>
    <rotatable>false</rotatable>
    <tickerType>Normal</tickerType>
    <stealable>false</stealable>
	<costList>
      <RM_OriginiumOre>40</RM_OriginiumOre>
    </costList>
    <statBases>
      <Mass>2.5</Mass>
      <MaxHitPoints>100</MaxHitPoints>
      <WorkToBuild>3200</WorkToBuild>
      <Flammability>0</Flammability>
      <Beauty>-18</Beauty>
      <Cleanliness>-5</Cleanliness>
      <TrapMeleeDamage>5</TrapMeleeDamage>
      <TrapSpringChance>0.10</TrapSpringChance>
    </statBases>
    <building>
      <deconstructible>false</deconstructible>
      <claimable>false</claimable>
      <displayAttackToDestroyOnInspectPane>true</displayAttackToDestroyOnInspectPane>
      <isTrap>true</isTrap>
      <trapDamageCategory>Sharp</trapDamageCategory>
      <expandHomeArea>false</expandHomeArea>
      <ai_chillDestination>false</ai_chillDestination>
    </building>
  </ThingDef>
	
</Defs>