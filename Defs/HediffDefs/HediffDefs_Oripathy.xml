	<HediffDef>
		<defName>RK_OriginiumBuildup</defName>
		<label>blood originium buildup</label>
		<description>Originium crystals present in the bloodstream.
	\nOriginium is always present in the blood stream at low levels but at higher levels, may lead to a condition known as Oripathy.</description>
		<hediffClass>Hediff_High</hediffClass>
		<tendable>true</tendable>
		<defaultLabelColor>(1.0, 0.5, 0.0)</defaultLabelColor>
		<scenarioCanAdd>true</scenarioCanAdd>
		<taleOnVisible>ToxicityRevealed</taleOnVisible>
		<maxSeverity>1</maxSeverity>
		<initialSeverity>0.1</initialSeverity>
		<comps>
			<li Class="HediffCompProperties_Pollution" MayRequire="Ludeon.RimWorld.Biotech">
				<pollutedSeverity>0.0003</pollutedSeverity>
				<unpollutedSeverity>0</unpollutedSeverity>
				<interval>60</interval>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>24</baseTendDurationHours>
				<severityPerDayTended>-0.2</severityPerDayTended>
			</li>
			<li Class="Originium.HediffCompProperties_Suppressible">
				<suppressor>RK_SuppressantHigh</suppressor>
				<suppresedHediff>RK_OriginiumBuildupSuppressed</suppresedHediff>
				<unsuppressedHediff>RK_OriginiumBuildup</unsuppressedHediff>
			</li>
			<li Class="Originium.HediffCompProperties_DynamicSeverityRange">
				<hediff>RK_Oripathy</hediff>
				<severityCurveMin>
				  <points>
					<li>(0, 0.00)</li>
					<li>(0.25, 0.1)</li>
					<li>(0.6, 0.35)</li>
					<li>(1.0, 0.50)</li>
				  </points>
				</severityCurveMin>
				<updateInterval>1000</updateInterval>
			</li>
		</comps>
		<stages>
		  <li>
			<label>initial</label>
			<becomeVisible>false</becomeVisible>
		  </li>
		  <li>
			<label>initial</label>
			<minSeverity>0.04</minSeverity>
			<painOffset>0.01</painOffset>
			<capMods>
			  <li>
				<capacity>BloodFiltration</capacity>
				<offset>-0.01</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>low</label>
			<minSeverity>0.2</minSeverity>
			<painOffset>0.03</painOffset>
			<capMods>
			  <li>
				<capacity>BloodFiltration</capacity>
				<offset>-0.03</offset>
			  </li>
			</capMods>
		  </li>
		  <li>
			<label>moderate</label>
			<minSeverity>0.40</minSeverity>
			<painOffset>0.05</painOffset>
			<vomitMtbDays>10</vomitMtbDays>
			<capMods>
			  <li>
				<capacity>BloodFiltration</capacity>
				<offset>-0.05</offset>
			  </li>
			</capMods>
			<hediffGivers>
			  <li Class="HediffGiver_Random">
				<hediff>RK_Oripathy</hediff>
				<mtbDays>60</mtbDays>
			  </li>
			</hediffGivers>
		  </li>
		  <li>
			<label>serious</label>
			<minSeverity>0.60</minSeverity>
			<painOffset>0.07</painOffset>
			<vomitMtbDays>5</vomitMtbDays>
			<capMods>
			  <li>
				<capacity>BloodFiltration</capacity>
				<offset>-0.07</offset>
			  </li>
			</capMods>
			<hediffGivers>
			  <li Class="HediffGiver_Random">
				<hediff>RK_Oripathy</hediff>
				<mtbDays>20</mtbDays>
			  </li>
			</hediffGivers>
		  </li>
		  <li>
			<label>extreme</label>
			<minSeverity>0.90</minSeverity>
			<painOffset>0.10</painOffset>
			<capMods>
			  <li>
				<capacity>BloodFiltration</capacity>
				<offset>-0.10</offset>
			  </li>
			</capMods>
			<hediffGivers>
			  <li Class="HediffGiver_Random">
				<hediff>RK_Oripathy</hediff>
				<mtbDays>1</mtbDays>
			  </li>
			</hediffGivers>
		  </li>
		</stages>
	  </HediffDef>
	  
	  <HediffDef ParentName="RK_OriginiumBuildup">
		<defName>RK_OriginiumBuildupSuppressed</defName>
		<label>blood originium buildup (suppressed)</label>
		<description>
			Originium crystals present in the bloodstream.
			\nOriginium is always present in the blood stream at low levels but at higher levels, may lead to a condition known as Oripathy.
			\n\n A suppressant has reduced the effects of originium in the blood
		</description>
		<comps>
			<li Class="HediffCompProperties_Pollution" MayRequire="Ludeon.RimWorld.Biotech">
				<pollutedSeverity>0.0003</pollutedSeverity>
				<unpollutedSeverity>0</unpollutedSeverity>
				<interval>240</interval>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>24</baseTendDurationHours>
				<severityPerDayTended>-0.3</severityPerDayTended>
			</li>
			<li Class="Originium.HediffCompProperties_Suppressible">
				<suppressor>RK_SuppressantHigh</suppressor>
				<suppresedHediff>RK_OriginiumBuildupSuppressed</suppresedHediff>
				<unsuppressedHediff>RK_OriginiumBuildup</unsuppressedHediff>
			</li>
			<li Class="Originium.HediffCompProperties_DynamicSeverityRange">
				<hediff>RK_Oripathy</hediff>
				<severityCurveMin>
				  <points>
					<li>(0, 0.00)</li>
					<li>(0.25, 0.1)</li>
					<li>(0.6, 0.35)</li>
					<li>(1.0, 0.50)</li>
				  </points>
				</severityCurveMin>
				<updateInterval>1000</updateInterval>
			</li>
		</comps>
		<stages>
		  <li>
			<label>low</label>
			<painOffset>0.01</painOffset>
		  </li>
		  <li>
			<label>moderate</label>
			<minSeverity>0.30</minSeverity>
			<painOffset>0.04</painOffset>
			<capMods>
			  <li>
				<capacity>BloodFiltration</capacity>
				<offset>-0.05</offset>
			  </li>
			</capMods>
			<hediffGivers>
			  <li Class="HediffGiver_Random">
				<hediff>RK_Oripathy</hediff>
				<mtbDays>75</mtbDays>
			  </li>
			</hediffGivers>
		  </li>
		  <li>
			<label>serious</label>
			<minSeverity>0.60</minSeverity>
			<painOffset>0.07</painOffset>
			<vomitMtbDays>10</vomitMtbDays>
			<capMods>
			  <li>
				<capacity>BloodFiltration</capacity>
				<offset>-0.07</offset>
			  </li>
			</capMods>
			<hediffGivers>
			  <li Class="HediffGiver_Random">
				<hediff>RK_Oripathy</hediff>
				<mtbDays>30</mtbDays>
			  </li>
			</hediffGivers>
		  </li>
		  </li>
		</stages>
	  </HediffDef>
	  
	  

	
	<HediffDef ParentName="ChronicDiseaseBase">
		<defName>RK_OripathyLesion</defName>
		<label>oripathy lesion</label>
		<labelNoun>an oripathy lesion</labelNoun>
		<description>A lump of originium crystals. Without treatment, the lesion will grow over time, causing worsening symptoms and eventually killing the patient. \nA skilled doctor can excise the lesion. An unskilled doctor may be able to simply amputate the body part which contains the lesion.</description>
		<hediffClass>HediffWithComps</hediffClass>
		<displayWound>true</displayWound>
		<initialSeverity>0.01</initialSeverity>
		<chanceToCauseNoPain>0.15</chanceToCauseNoPain>
		<tendable>true</tendable>
		<stages>
		  <li>
			<label>minor</label>
			<partEfficiencyOffset>-0.1</partEfficiencyOffset>
			<painOffset>0.01</painOffset>
		  </li>
		  <li>
			<minSeverity>0.15</minSeverity>
			<label>minor</label>
			<partEfficiencyOffset>-0.25</partEfficiencyOffset>
			<painOffset>0.05</painOffset>
		  </li>
		  <li>
			<minSeverity>0.4</minSeverity>
			<label>major</label>
			<partEfficiencyOffset>-0.5</partEfficiencyOffset>
			<painOffset>0.1</painOffset>
		  </li>
		  <li>
			<minSeverity>0.6</minSeverity>
			<label>major</label>
			<partEfficiencyOffset>-0.8</partEfficiencyOffset>
			<painOffset>0.2</painOffset>
		  </li>
		  <li>
			<minSeverity>0.8</minSeverity>
			<label>extreme</label>
			<partEfficiencyOffset>-0.9</partEfficiencyOffset>
			<painOffset>0.4</painOffset>
		  </li>
		  <li>
			<minSeverity>1</minSeverity>
			<label>extreme</label>
			<partEfficiencyOffset>-1.0</partEfficiencyOffset>
			<painOffset>0.6</painOffset>
			<destroyPart>true</destroyPart>
		  </li>
		</stages>
		<comps>
			 <li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>96</baseTendDurationHours>
				<severityPerDayTended>-0.005</severityPerDayTended>
			 </li>
			<li Class="Originium.HediffCompProperties_HediffDependentSeverityPerDay">
				<hediff>RK_OriginiumBuildup</hediff>
				<severityCurve>
				  <points>
					<li>(0, 0.01)</li>
					<li>(0.25, 0.02)</li>
					<li>(0.50, 0.04)</li>
					<li>(0.75, 0.08)</li>
					<li>(1, 0.16)</li>
				  </points>
				</severityCurve>
				<updateInterval>1000</updateInterval>
			</li>
		</comps>
	</HediffDef>
  
  <RecipeDef ParentName="SurgeryFlesh">
    <defName>RK_ExciseLesion</defName>
    <label>excise oripathic lesion</label>
    <description>Excise an oripathic lesion.</description>
    <workerClass>Recipe_RemoveHediff</workerClass>
    <jobString>Excising lesion.</jobString>
    <workAmount>8000</workAmount>
    <removesHediff>RK_OripathyLesion</removesHediff>
    <successfullyRemovedHediffMessage>{0} has successfully excised {1}'s lesion.</successfullyRemovedHediffMessage>
    <deathOnFailedSurgeryChance>0.15</deathOnFailedSurgeryChance>
    <skillRequirements>
      <Medicine>12</Medicine>
    </skillRequirements>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>Medicine</li>
          </categories>
        </filter>
        <count>4</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
        <li>Medicine</li>
      </categories>
      <disallowedThingDefs>
        <li>MedicineHerbal</li>
      </disallowedThingDefs>
    </fixedIngredientFilter>
  </RecipeDef>
</Defs>