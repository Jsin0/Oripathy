<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<HediffDef ParentName="ChronicDiseaseBase">
		<defName>RK_Oripathy</defName>
		<hediffClass>Originium.Hediff_Oripathy</hediffClass>
		<label>oripathy</label>
		<description>Also known as stone disease, Oripathy an incurable disease due to the assimilation of originium into the body.  It is characterized by crystalline growths throughout the body.</description>
		<everCurableByItem>false</everCurableByItem>
		<taleOnVisible>ToxicityRevealed</taleOnVisible>
		<scenarioCanAdd>true</scenarioCanAdd>
		<maxSeverity>1</maxSeverity>
		<comps>
			<li Class="Originium.HediffCompProperties_HediffDependentSeverityPerDay">
				<hediff>RK_OriginiumBuildup</hediff>
				<severityFactor>0.29</severityFactor>
				<severityOffset>0.005</severityOffset>
				<severityPerDayRange>0~0.002</severityPerDayRange>
				<updateInterval>250</updateInterval>
			</li>
			<li Class="Originium.HediffCompProperties_Suppressible">
				<suppressor>RK_SuppressantHigh</suppressor>
				<suppresedHediff>RK_OripathySuppressed</suppresedHediff>
				<unsuppressedHediff>RK_Oripathy</unsuppressedHediff>
			</li>
		</comps>
		<stages>
			<li>
				<label>minor</label>
				<minSeverity>0.01</minSeverity>
				<painOffset>0.05</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>RK_OripathyLesion</hediff>
						<mtbDays>438</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.35</minSeverity>
				<label>moderate</label>
				<painOffset>0.10</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>RK_OripathyLesion</hediff>
						<mtbDays>226</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.70</minSeverity>
				<label>major</label>
				<painOffset>0.15</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>RK_OripathyLesion</hediff>
						<mtbDays>60</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.90</minSeverity>
				<label>extreme</label>
				<painOffset>0.25</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>RK_OripathyLesion</hediff>
						<mtbDays>10</mtbDays>
						<countToAffect>2</countToAffect>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>
	
	<HediffDef ParentName="RK_Oripathy">
