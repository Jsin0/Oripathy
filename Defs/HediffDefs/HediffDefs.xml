<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	
	<HediffDef ParentName="InfectionBase">
		<defName>Oripathy</defName>
		<hediffClass>Oripathy.Hediff_Oripathy</hediffClass>
		<label>oripathy</label>
		<description>An incurable disease due to the introduction of originium into the body.</description>
		<lethalSeverity>1</lethalSeverity>
		<tendable>true</tendable>
		<everCurableByItem>false</everCurableByItem>
		<taleOnVisible>ToxicityRevealed</taleOnVisible>
		<scenarioCanAdd>true</scenarioCanAdd>
		<comps>
			<li Class="HediffCompProperties_SeverityPerDay">
				<severityPerDay>.017</severityPerDay>
			</li>
			<li Class="HediffCompProperties_TendDuration">
				<baseTendDurationHours>96</baseTendDurationHours>
				<severityPerDayTended>-0.015</severityPerDayTended>
			</li>
			<li Class="HediffCompProperties_SurgeryInspectable">
				<surgicalDetectionDesc>{PAWN_nameDef} is showing early signs of oripathy. While incurable, {PAWN_objective} can live an adequate life with regular care and monitoring.</surgicalDetectionDesc>
			</li>
		</comps>
		<stages>
			<li>
				<label>initial</label>
				<becomeVisible>false</becomeVisible>
			</li>
			<li>
				<label>minor</label>
				<minSeverity>0.1</minSeverity>
				<painOffset>0.05</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>OripathyLesion</hediff>
						<mtbDays>438</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
			<li>
				<minSeverity>0.35</minSeverity>
				<label>major</label>
				<painOffset>0.10</painOffset>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>OripathyLesion</hediff>
						<mtbDays>226</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
				<capMods>
				</capMods>
			</li>
			<li>
				<minSeverity>0.90</minSeverity>
				<label>extreme</label>
				<lifeThreatening>true</lifeThreatening>
				<painOffset>0.20</painOffset>
				<deathMtbDays>60</deathMtbDays>
				<mtbDeathDestroysBrain>true</mtbDeathDestroysBrain>
				<capMods>
				</capMods>
				<hediffGivers>
					<li Class="HediffGiver_Random">
						<hediff>OripathyLesion</hediff>
						<mtbDays>20</mtbDays>
						<canAffectAnyLivePart>true</canAffectAnyLivePart>
					</li>
				</hediffGivers>
			</li>
		</stages>
	</HediffDef>
			
